<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel>
        <headerToolbar>
            <Toolbar >
                <core:Icon src="{= ${incidenceModel>status} === '0' ? 'accept' :
                                   ${incidenceModel>status} === '1' ? 'alert'  :
                                   ${incidenceModel>status} === '2' ? 'decline'  : ''}"/>
                <Title text="{i18n>incidence} {incidenceModel>IncidenceId}
                {path : 'incidenceModel>CreationDate', formatter: '.Formatter.dateFormat'}"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://save" press="onSaveIncidence"/>
                <core:Icon src="delete" press="onDeleteIncidence"></core:Icon>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox >
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="{i18n>incidenceDate}"/>
                    <DatePicker dateValue="{incidenceModel>CreationDate}"/>
                </VBox>    
                <VBox visible="{= ${incidenceModel>CreationDate} !== '' &amp;&amp; ${incidenceModel>CreationDate} !== undefined }"
                    class="sapUiSmallMarginEnd">
                    <Text text="{i18n>incidenceReason}"/>
                    <Input value="{incidenceModel>Reason}" ></Input>
                </VBox>                     
                <VBox visible="{= ${incidenceModel>CreationDate} !== '' &amp;&amp; ${incidenceModel>CreationDate} !== undefined }"
                    class="sapUiSmallMarginEnd">
                    <Text text="{i18n>incidenceType}"/>
                    <Select selectedKey="{incidenceModel>Type}" forceSelection="false">
                        <core:Item key="0" text="{i18n>incidenceCorrect}"/>
                        <core:Item key="1" text="{i18n>incidencePending}"/>
                        <core:Item key="2" text="{i18n>incidenceError}"/>
                    </Select>
                </VBox>                                      
            </HBox> 
        </content>
    </Panel>
</core:FragmentDefinition>