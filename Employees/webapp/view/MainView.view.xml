<mvc:View   controllerName="logaligroup.Employees.controller.MainView" 
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true" 
            xmlns="sap.m"
            xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >
                            <Label  id="labelEmployee" 
                                    text="{i18n>labelEmployee}" 
                                    labelFor="inputEmployee"
                                    class="sapUiSmallMargin"/>
                            <Input  id="inputEmployee" 
                                    maxLength="6" 
                                    value="{jsonCountries>/EmployeeId}"
                                    width="200px" 
                                    class="sapUiSmallMarginEnd"/>
                            <Label  id="labelCountry" 
                                    text="{i18n>labelCountry}" 
                                    labelFor="slCountry"
                                    class="sapUiSmallMargin"
                                    visible="true"/>
                            <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" 
                                    forceSelection="false" visible="true"
                                    items="{
                                        path: 'jsonCountries>/ListCountry',
                                        sorter: { path: 'Key' }
                                    }">
                                    <items>
                                        <core:Item key ="{jsonCountries>Key}" text="{jsonCountries>Text}"/>                                    
                                    </items>
                            </Select>        
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search"
                            press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter"
                            press="onClearFilter" class="sapUiSmallMarginEnd"/>                                                                                            
                        </HBox>
                        <HBox >
                            <Panel>
                                <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonConfig>/visibleButtonShowCity}" press="onShowCity"/>
                                <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonConfig>/visibleButtonHideCity}" press="onHideCity"/>
                                <Table id="tableEmployee" items="{jsonEmployees>/}">
                                    <columns>
                                        <Column visible="{jsonConfig>/visibleID}">
                                            <header>
                                                <Label text="{i18n>tableId}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleName}">
                                            <header>
                                                <Label text="{i18n>tableName}"/>
                                            </header>
                                        </Column>      
                                        <Column visible="{jsonConfig>/visibleCountry}">
                                            <header>
                                                <Label text="{i18n>tableCountry}"/>
                                            </header>
                                        </Column>    
                                        <Column visible="{jsonConfig>/visibleCity}">
                                            <header>
                                                <Label text="{i18n>tableCity}"/>
                                            </header>
                                        </Column>                                                                                                              
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode" >
                                            <cells>
                                                <Label text="{jsonEmployees>EmployeeID}"/>
                                                <Label text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                                <Label text="{jsonEmployees>Country}"/>
                                                <Label text="{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
